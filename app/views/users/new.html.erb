<h1>New User</h1>
<%= form_with(model: @user, local: true, class: "ui form") do |f|%>
    <div class="field">
        <%= f.label :first_name%>
        <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "first name"%>
    </div>

    <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, required: true, placeholder: "last name"%>
    </div>

    <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, required: true, placeholder: "email"%>
    </div>

     <div class="field">
        <%= f.label :appointment %>
        <%= f.text_field :appointment, required: true, placeholder: "add appointment"%>
    </div>
    <div>
    <%=f.submit nil, class: "ui blue button"%>
    </div>
    <%end%>
